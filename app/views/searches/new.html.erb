<%= form_for(@search, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @search.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@search.errors.count, "error") %> prohibited this search from being saved:</h4>

      <ul>
      <% @search.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

 <div class="form-group">
    <%= f.label :itemtp, class: "col-sm-2 control-label" %>
