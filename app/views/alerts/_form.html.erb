<%= form_for(@alert, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @alert.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@alert.errors.count, "error") %> prohibited this alert from being saved:</h4>

      <ul>
      <% @alert.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :date, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :date, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :hasDoc, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :hasDoc, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :status, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :status, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :date_update, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :date_update, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :date_cad, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :date_cad, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :item, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :item, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :account, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :account, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
