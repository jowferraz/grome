<div class="page-header">
  <%= link_to new_alert_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Alert
  <% end %>
  <h1>Listing alerts</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Date</th>
            <th>Hasdoc</th>
            <th>Status</th>
            <th>Date update</th>
            <th>Date cad</th>
            <th>Item</th>
            <th>Account</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @alerts) do |alert| %>
            <td><%= alert.date %></td>
            <td><%= alert.hasDoc %></td>
            <td><%= alert.status %></td>
            <td><%= alert.date_update %></td>
            <td><%= alert.date_cad %></td>
            <td><%= alert.item %></td>
            <td><%= alert.account %></td>
            <td><%= link_to 'Show', alert %></td>
        <td><%= link_to 'Edit', edit_alert_path(alert) %></td>
        <td><%= link_to 'Destroy', alert, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
