<%= form_for(@item, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @item.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h4>

      <ul>
      <% @item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label 'Gear', class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.radio_button :itemtp, "GEAR",label: 'Gear',checked: true ,class: "form-control" %>
      <%= f.label 'Equipment', class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.radio_button :itemtp, "EQUIPMENT",label: 'Equipment' ,class: "form-control" %>
    </div>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :alert, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :alert, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :status, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :status, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
