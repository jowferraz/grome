<div class="page-header">
  <%= link_to new_item_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Item
  <% end %>
  <h1>Listing items</h1>
  <h2>
    <tr>
  <%= form_tag items_path, :method => "get" do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search Itens" %>
  <%= submit_tag "Search"%>
  <% end %>
  </tr>
  </h2>
  <h3 class="searchLinks">
  <tr>
    <%= link_to "Custom Search" + " /", new_search_path %>
  </tr>
  <tr>
    <%= link_to "Saved Searches", "searches" %>
  </tr>
  </h3>
  <h4>
  <tr>
    <%= link_to "Alert", "alerts" %>
  </tr>
  </h4>
  
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Item Type</th>
            <th>name</th>
            <th>brand</th>
            <th>model</th>
            <th>color</th>
            <th>Status</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @items) do |item| %>
            <td><%= item.itemtp %></td>
            <td><%= item.alert %></td>
            <td><%= item.status %></td>
            <td><%= link_to 'Show', item %></td>
            
           
        
            
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>