<div class="page-header">
  <%= link_to new_account_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Account
  <% end %>
  <h1>Listing accounts</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Name</th>
            <th>Cpf</th>
            <th>Rg</th>
            <th>Street</th>
            <th>Number</th>
            <th>Zipcode</th>
            <th>Country</th>
            <th>Accept terms</th>
            <th>User</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @accounts) do |account| %>
            <td><%= account.name %></td>
            <td><%= account.cpf %></td>
            <td><%= account.rg %></td>
            <td><%= account.street %></td>
            <td><%= account.number %></td>
            <td><%= account.zipcode %></td>
            <td><%= account.country %></td>
            <td><%= account.accept_terms %></td>
            <td><%= account.user_id %></td>
            <td><%= link_to 'Show', account %></td>
        <td><%= link_to 'Edit', edit_account_path(account) %></td>
        <td><%= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
