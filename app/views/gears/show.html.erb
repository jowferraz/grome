  <dt>Name:</dt>
  <dd><%= @gear.name %></dd>

  <dt>Serial:</dt>
  <dd><%= @gear.serial %></dd>

  <dt>Color:</dt>
  <dd><%= @gear.color %></dd>

  <dt>Brand:</dt>
  <dd><%= @gear.brand %></dd>

  <dt>Details:</dt>
  <dd><%= @gear.details %></dd>

  <dt>Date buy:</dt>
  <dd><%= @gear.date_buy %></dd>

  <dt>Alert:</dt>
  <dd><%= @gear.alert %></dd>

  <dt>Item:</dt>
  <dd><%= @gear.item %></dd>

  <dt>Account:</dt>
  <dd><%= @gear.account %></dd>

</dl>
